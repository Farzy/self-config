# {{ ansible_managed }}
[includeIf "gitdir:~/src/personal/"]
  	path = .gitconfig-personal
[includeIf "gitdir:~/src/gg-code/"]
  	path = .gitconfig-professional
[color]
    pager = true
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    st = status
    ci = commit
    co = checkout
    fp = format-patch
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
    lg2 = log --oneline --decorate --graph
    oops = commit --amend -a -C HEAD
    prev = checkout HEAD^1
    next = "!sh -c 'git log --reverse --pretty=%H master | awk \"/$(git rev-parse HEAD)/{getline;print}\" | xargs git checkout'"
    b = branch -v
    r = remote -v
    t = tag -l
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    spull = !git pull && git submodule sync --recursive && git submodule update --init --recursive
    # See https://stackoverflow.com/a/21284342/59855
    grep-all = !sh -c 'git grep "$0" "$@" "$(git for-each-ref --format=\"%(refname)\" refs/)"'
[merge]
    #stat = true
[core]
    #pager = cat
    pager = less -FRX
    excludesfile = ~/.gitignore_global
    quotepath = false
[github]
    user = Farzy
    token = {{ github_token }}
[http]
    sslVerify = false
[gist]
    browse = no
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[push]
    default = upstream
[credential]
    helper = osxkeychain
[commit]
    template = ~/.stCommitMsg
[pull]
    rebase = true
